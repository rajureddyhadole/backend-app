<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white">
    <a class="text-blue-500 block mb-10" href="/">Back to home</a>
    <h1 class="text-3xl mb-3">All Users</h1>
    <div class="users flex gap-3 flex-wrap">
      <% if(users.length > 0) { %>
        <% users.forEach((user) => { %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-52 bg-zinc-500 rounded-lg overflow-hidden">
              <img class="w-full h-full object-cover" src="<%= user.image %>" alt="image">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500 my-2"><%= user.email %></h5>
            <div class="flex gap-3">
              <a class="text-zinc-300" href="/edit/<%= user._id %>">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h1 class="text-lg text-zinc-600">No posts yet</h1>
      <% } %>
      
      </div>
    </div>
  </div>
</body>
</html>